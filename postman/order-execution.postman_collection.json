              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amount\": 1.5,\n  \"slippage\": 0.01\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders/execute",
              "host": ["{{base_url}}"],
              "path": ["api", "orders", "execute"]
